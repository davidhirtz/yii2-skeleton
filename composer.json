{
	"name":"davidhirtz/yii2-skeleton",
	"description":"Yii2 Skeleton",
	"homepage":"http://www.davidhirtz.com/",
	"type":"project",
	"minimum-stability":"dev",
	"prefer-stable":true,
	"require":{
		"php": ">=5.4.0",
		"ext-exif":"*",
		"ext-json":"*",
		"ext-openssl":"*",
		"ext-simplexml":"*",
		"ext-xmlwriter":"*",
		"yiisoft/yii2": ">=2.0.13",
		"yiisoft/yii2-authclient": "*",
		"yiisoft/yii2-bootstrap4": "*",
		"yiisoft/yii2-swiftmailer": "*",
		"yiisoft/yii2-imagine": ">=2.1.0",
		"yiisoft/yii2-jui": "^2.0",
		"2amigos/yii2-file-upload-widget": "~1.0",
		"2amigos/yii2-ckeditor-widget" : "~2.1",
		"rmrevin/yii2-fontawesome": "~2.17",
		"davidhirtz/yii2-datetime-behavior": "*",
		"davidhirtz/yii2-timeago": "dev-master",
		"davidhirtz/yii2-curl": "dev-master",
		"davidhirtz/yii2-lazysizes": "dev-master",
		"bower-asset/bootbox": ">=4.4.0",
		"tinify/tinify": "^1.4",
		"hashids/hashids": "^1.0",
		"guzzlehttp/guzzle": "~6.0",
		"guzzlehttp/oauth-subscriber": "0.3.*"
	},
	"config":{
		"process-timeout":1800,
		"fxp-asset":{
			"enabled":false
		}
	},
	"scripts":{
		"post-install-cmd":[
			"yii\\composer\\Installer::postInstall"
		],
		"post-create-project-cmd":[
			"yii\\composer\\Installer::postCreateProject",
			"yii\\composer\\Installer::postInstall"
		]
	},
	"extra":{
		"yii\\composer\\Installer::postCreateProject":{
			"setPermission":[
				{
					"runtime":"0777",
					"web/assets":"0777",
					"yii":"0755"
				}
			]
		}
	},
	"repositories":[
		{
			"type":"composer",
			"url":"https://asset-packagist.org"
		},
		{
			"type":"git",
			"url":"https://github.com/davidhirtz/yii2-skeleton"
		}
	]
}